<h1>Listing potes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @potes.each do |pote| %>
      <tr>
        <td><%= pote.name %></td>
        <td><%= pote.age %></td>
        <td><%= link_to 'Show', pote %></td>
        <td><%= link_to 'Edit', edit_pote_path(pote) %></td>
        <td><%= link_to 'Destroy', pote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pote', new_pote_path %>
